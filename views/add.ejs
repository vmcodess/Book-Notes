<%- include('partials/header.ejs'); %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <h1 class="mb-4 text-center">Add a New Book</h1>
      <form action="/add" method="POST" class="border rounded p-4 shadow-sm bg-light">

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="title" id="title" class="form-control" placeholder="e.g. Atomic Habits" required />
        </div>

        <div class="mb-3">
          <label for="author" class="form-label">Author</label>
          <input type="text" name="author" id="author" class="form-control" placeholder="e.g. James Clear" required />
        </div>

        <div class="mb-3">
          <label for="rating" class="form-label">Rating (1â€“10)</label>
          <input type="number" name="rating" id="rating" class="form-control" min="1" max="10" placeholder="10" required />
        </div>

        <div class="mb-3">
          <label for="notes" class="form-label">Notes</label>
          <textarea name="notes" id="notes" class="form-control" rows="5" placeholder="Write any thoughts or takeaways..."></textarea>
        </div>

        <div class="mb-3">
          <label for="date_read" class="form-label">Date Read</label>
          <input type="date" name="date_read" id="date_read" class="form-control" />
        </div>

        <div class="d-flex justify-content-between align-items-center">
          <a href="/" class="btn btn-secondary">Cancel</a>
          <button type="submit" class="btn btn-success">Add Book</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs'); %>
